@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="display-4">Markdown Editor</h1>

    <form id="markdownForm">
        <div class="form-group">
            <label for="markdownTitle">Title:</label>
            <input type="text" class="form-control" id="markdownTitle" />
        </div>

        <div class="form-group">
            <label for="markdownText">Markdown Text:</label>
            <textarea class="form-control" id="markdownText" rows="5"></textarea>
        </div>

        <div class="my-3"> <!-- Add margin top and bottom -->
            <button type="button" class="btn btn-primary d-block mx-auto" onclick="saveMarkdown()">Save</button>
        </div>
    </form>

    @if (Model != null)
    {
        <div class="row">
            @foreach (var markdown in Model)
            {
                <div class="col-md-4" id="markdownCard_@markdown.MarkdownId">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@markdown.Title</h5>
                            <p class="card-text">@markdown.Content</p>
                            <a href="@Url.Action("EditMarkdown", "Editor", new { markdownId = markdown.MarkdownId })"
                                class="btn btn-primary">Edit</a>
                            <button class="btn btn-danger" onclick="removeMarkdown('@markdown.MarkdownId')">Remove</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<script src="~/js/saveMarkdown.js"></script>
<script src="~/js/removeMarkdown.js"></script>