@model MDEdit.Models.MarkdownModel

@{
    ViewData["Title"] = "Edit Markdown";
}

<div class="container">
    <h1 class="display-4">Edit Markdown</h1>

    <form id="markdownForm">
        <!-- Hidden input for markdownId -->
        <input type="hidden" id="markdownId" name="markdownId" value="@Model.MarkdownId" />

        <div class="form-group">
            <label for="markdownTitle">Title:</label>
            <input type="text" class="form-control" id="markdownTitle" value="@Model.Title" />
        </div>

        <div class="form-group">
            <label for="markdownText">Markdown Text:</label>
            <textarea class="form-control" id="markdownText" rows="5">@Model.Content</textarea>
        </div>

        <button type="button" class="btn btn-primary" onclick="saveMarkdown()">Save</button>
    </form>
</div>

<script src="~/js/saveMarkdown.js"></script>
